<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?attr/selectableItemBackground">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
                android:id="@+id/container_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="right|center_vertical" >

            <ImageView
                android:id="@+id/photo"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:src="@drawable/yoba"
/>
            </FrameLayout>

<RelativeLayout
    android:layout_width="330dp"
    android:layout_height="match_parent"
    android:id="@+id/data_container"
    android:layout_toRightOf="@+id/container_photo"

   >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/tvHeadId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:textSize="13sp"
                android:layout_gravity="left|top"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/tvID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="46"
                android:textSize="13sp"
                android:layout_gravity="left|top"
                android:layout_marginLeft="5dp"
                android:layout_alignBaseline="@+id/tvHeadId"
                android:layout_toRightOf="@+id/tvHeadId" />

            <TextView
                android:id="@+id/tvSpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/tvID"
                android:layout_alignBaseline="@+id/tvHeadId"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Продукты"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/tvSpace"
                android:layout_marginLeft="5dp"
                android:layout_alignBaseline="@+id/tvHeadId"/>

    </RelativeLayout>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Очень ехидный сыр"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.12.1993 01:08:24"
                android:textSize="13sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

</RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/count_container"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/container_photo"
                android:layout_toRightOf="@+id/data_container"
                android:layout_toEndOf="@+id/data_container">

                <TextView
                    android:id="@+id/tvSht"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="шт"
                    android:textSize="18sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tvSht"
                    android:textSize="18sp"
                    android:layout_marginRight="2dp"
                    android:layout_toStartOf="@+id/tvSht" />





            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>